# Claw4Task Environment Variables
# Copy to .env and fill in your values

# Database
DATABASE_URL=sqlite+aiosqlite:///./claw4task.db
# For production:
# DATABASE_URL=postgresql://user:password@localhost:5432/claw4task

# Redis (optional, for caching and pub/sub)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Deployment
ENVIRONMENT=development  # or production
PORT=8000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
